{
	"name": "@sammas/react",
	"version": "0.2.1",
	"description": "React implementation of some common components done in Seznam.cz's design system Sammas.",
	"author": {
		"name": "Jakub Kraft",
		"email": "jakub.kraft@firma.seznam.cz"
	},
	"devDependencies": {
		"@babel/cli": "^7.1.2",
		"@babel/core": "^7.1.2",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0",
		"@babel/preset-env": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"eslint": "^5.8.0",
		"eslint-plugin-react": "^7.11.1",
		"foreach-cli": "^1.8.1",
		"jsdoc-to-markdown": "^4.0.1",
		"rollup": "^0.65.2",
		"rollup-plugin-node-resolve": "^3.4.0"
	},
	"scripts": {
		"build": "babel src --out-dir dist && ./node_modules/rollup/bin/rollup --config && cp package.json dist && cp README.md dist",
		"clear": "rm -rf dist",
		"docs": "./node_modules/foreach-cli/bin -g \"./src/**/*.js\" -x \"nodejs ./node_modules/jsdoc-to-markdown/bin/cli.js --partial ./docs/scope.hbs  --files #{path} --global-index-format none > #{dir}/README.md\"",
		"post": "npm publish --access=public dist"
	},
	"main": "main.js",
	"module": "index.js",
	"dependencies": {
		"@sammas/css": "^0.0.4",
		"@sammas/helpers": "^0.0.1",
		"@sammas/icons": "^0.0.1",
		"react": "^16.6.0"
	}
}
